{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "lib": ["es2020"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "rootDir": "./",
    "typeRoots": ["./node_modules/@types"],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "typechain-types": ["./typechain-types"]
    }
  },
  "include": ["./scripts/**/*.ts", "./test/**/*.ts", "./hardhat.config.ts", "./typechain-types/**/*.ts"],
  "exclude": ["node_modules", "dist", "artifacts", "cache"]
}
